<h1>Listing usrs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>State</th>
  </tr>

<% @usrs.each do |usr| %>
  <tr>
    <td><%=h usr.name %></td>
    <td><%=h usr.email %></td>
    <td><%=h usr.state %></td>
    <td><%= link_to 'Show', usr %></td>
    <td><%= link_to 'Edit', edit_usr_path(usr) %></td>
    <td><%= link_to 'Destroy', usr, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New usr', new_usr_path %>